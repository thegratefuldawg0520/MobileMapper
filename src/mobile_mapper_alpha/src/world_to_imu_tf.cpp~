#include <ros/ros.h>
#include <tf/transform_broadcaster.h>
#include <sensor_msgs/Imu.h>

void imuCallback(const sensor_msgs::Imu& msg){
	
  static tf::TransformBroadcaster broadcaster;
  
  tf::Transform transform;
  
  //get info from IMU message
  
  transform.setOrigin(tf::Vector3(0.0, 0.0, 0.0));
  transform.setRotation(msg.orientation);
  
  broadcaster.sendTransform(tf::StampedTransform(transform),ros::Time::now(),"world", "fcu"));
  
int main(int argc, char** argv){
	
  //Initialize transform node
  ros::init(argc, argv, "world_to_imu_tf_publisher");
  
  ros::NodeHandle node;
  
  ros::Subscriber sub = node.subscribe("mavros/imu/data", 100, &poseCallback);
  
  ros::spin();
  
  return 0
}

